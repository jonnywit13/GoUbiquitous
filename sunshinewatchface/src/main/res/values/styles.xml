<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="high_temperature_style">
        <item name="android:textColor">@color/digital_text</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="low_temperature_style">
        <item name="android:textColor">@color/digital_text_low</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="time_date_style">
        <item name="android:textColor">@color/digital_text</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

</resources>